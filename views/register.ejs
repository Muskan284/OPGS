<% include ../partials/header %>

<div class="container">
        <div class="row">
            <h1 style="text-align:center;"> Sign Up here </h1>
            <div style="width:30% ;margin: 0 auto;">
            <form action="/register" method="POST">
                <div class="form-group">
                        <label>Username</label>
                        <input class="form-control" type="text" name="username" placeholder="Name" >
                </div>
                <div class="form-group">
                        <label>Contact</label>
                        <input class="form-control" type="tel" name="contact_no" placeholder="Contact Number" pattern="[1-9][1-9][1-9][1-9][1-9][1-9][1-9][1-9][1-9][1-9]"  required>  
                </div>
                <div class="form-group">
                        <label>Email</label>
                        <input class="form-control" type="email" name="email" placeholder="Email" required>  
                </div>
                <div class="form-group">
                        <label>password</label>
                        <input class="form-control" type="password" name="password" placeholder="Password">  
                </div>
                <div class="form-group">
                        <button class="btn btn-primary btn-block btn-lg">Submit!!</button>
                </div>
            </form>
            </div>
        </div>
    </div>
    


<% include ../partials/footer %>