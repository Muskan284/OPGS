<% include ../partials/header %>


<div class="container">
  <div class="row">
      <h1 style="text-align: center;">Create a new campground</h1>
      <div style="width:30%;margin:0 auto;">
      <form action="/campgrounds" method="POST" enctype="multipart/form-data">
           <div class="form-group">
              <label>Name</label>
             <input class="form-control" type="text" name="name"  placeholder="Name of PG" required>
           </div>   
           <div class="form-group">    
              <label>Images</label>
             <input class="form-control" type="file" name="image" required>
           </div>
           <div class="form-group">
              <label>State</label>
            <input class="form-control" type="text" name="location_state" placeholder="State" required>
          </div>
          <div class="form-group">
            <label>City</label>
            <input class="form-control" type="text" name="location_city" placeholder="City" required>
          </div>
          <div class="form-group">
              <label>Address</label>
              <textarea class="form-control" type="text" name="address" placeholder="address" required></textarea>
            </div>
            <div class="form-group">
                <label class>Services</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" value="1" name="service0">
                    <label class="form-check-label">AC</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" value="1" name="service1" > 
                    <label class="form-check-label">TV</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" value="1" name="service2">
                    <label class="form-check-label">Fridge</label>
                  </div>
                  <div class="form-check form-check-inline">
                      <input class="form-check-input" type="checkbox" value="1" name="service3">
                      <label class="form-check-label">Fan</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="checkbox" value="1" name="service4">
                      <label class="form-check-label">Parking</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="checkbox" value="1" name="service5">
                      <label class="form-check-label">Daily meals</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="service6">
                        <label class="form-check-label">furnished</label>
                      </div>
                      <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="service7">
                        <label class="form-check-label">Water supply</label>
                      </div>
              </div>
           <div class="form-group">
            <label>Comment</label>
            <textarea class="form-control" type="text" name="description" placeholder="Any other details"></textarea>
          </div>
          <div class="form-group">
              <label>Price</label>
              <input class="form-control" type="number" name="price" placeholder="price per month" required>
            </div>
           <div class="form-group">
             <button class="btn btn-primary btn-lg btn-block">submit</button>
           </div>
      </form>
      </div>
  </div>
</di  v>

<% include ../partials/footer %>
